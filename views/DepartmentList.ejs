                              <%}else{%>
                                  <i>No Department to show</i>
                              <%}%>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            
           <!-- Nav tabs -->
          
        </header>

        <main class="pt-4 ">
            <!-- Tab panes -->
            <div class="tab-content mt-5 ">
           
                <div
                    class="tab-pane active"
                    id="profile"
                    role="tabpanel"
                    aria-labelledby="profile-tab"
                >
                   <div class="container-fluid overflow-auto flex-wrap d-flex">
                   <!-- disply warehouse -->

                   <%if(Departments.length > 0){%>
                    <%Departments.forEach(WH=>{%>
     
                      <a class="card2" href="/api/v1/Support?department=<%=WH._id%>&page=1&limit=15&category=all" title="Visit <%=WH.Name.toUpperCase()%>">
                        <img width="50" height="50" src="https://img.icons8.com/ios-filled/50/organization-chart-people.png" alt="organization-chart-people"/>
                      <div></div>
                        <b><%=WH.Name.toUpperCase()%></b>
                        <p class="small">Manage Operations for <%=WH.Name%>  </p>
                        <i class="small">H.O.D: 

                            
                      
                               
                                  <%Department = Hod.filter(hod=>{%>
                                    <%return hod._id.toString() === WH.HOD.toString() %>
                                  <%})%>
                                  <%Department.map(dpt=>{%>
                                    <%=dpt.firstName%>
                                  <%})%>
          
                        </i>
                        <div class="go-corner"  href="/api/v1/Location/<%=WH._id%>?page=1&limit=15&category=all">
                          <div class="go-arrow">
                            â†’
