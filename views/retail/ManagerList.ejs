        <main class="pt-4 m-3 position-relative">
            <div id="updateVanForm" class="container-fluid mb-5 mt-5 p-3 flex items-center flex-col justify-center gap-3 shadow bg-light">
              
                <div class="content ">
                  
                   

                   <div class="col-md-4">
                        <label for="vehiclePlate" class="form-label">Search customer</label>
                        <input
                            type="text"
                            class="form-control"
                            id="vehiclePlate"
                            name="vehiclePlate"
                            required
                            placeholder="Search a customer" 
                        />
                    </div>

                    <!-- display customer list here -->

                    <br>

                    <div id="display"  class="list-group list-group-horizontal-xxl">

                        <% if (customer.length > 0) { %>
                            <% customer.forEach(element => { %>
                                <span  class="list-group position-relative mb-2" title=""  id="reverseID"  data-reverse="">
                                    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" id="rev" >
                                        <small class="position-absolute top-0  start-50 translate-middle badge rounded-pill bg-warning"title='grand total of this bill'>
                                      <%=element.blocked ? 'Deactivate' : 'Activated'%> 
                                        </small>
                                        <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/api/v1/retailer/<%= element._id%>">
                                            <%= element.name  %> 
                                        </a>
                                        </div> 
                                </span>
                            <% }) %>
                        <% }else{ %>
                            <span  class="opacity-50 list-group position-relative mb-2" title=""  id="reverseID"  data-reverse="">
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" id="rev" >
                                    <small class="position-absolute top-0  start-50 translate-middle badge rounded-pill bg-warning"title='grand total of this bill'>
                                   Pending 
                                    </small>
                                    <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" >
                                        A customer
                                    </a>
                                    </div> 
                            </span>
    
                            <span  class="opacity-25 list-group position-relative mb-2" title=""  id="reverseID"  data-reverse="">
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" id="rev" >
                                    <small class="position-absolute top-0  start-50 translate-middle badge rounded-pill bg-warning"title='grand total of this bill'>
                                   Pending 
                                    </small>
                                    <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" >
                                        B customer
                                    </a>
                                    </div> 
                            </span>
    
                            <span  class="opacity-25 list-group position-relative mb-2" title=""  id="reverseID"  data-reverse="">
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" id="rev" >
                                    <small class="position-absolute top-0  start-50 translate-middle badge rounded-pill bg-warning"title='grand total of this bill'>
                                   Pending 
                                    </small>
                                    <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" >
                                        C customer
                                    </a>
                                    </div> 
                            </span>
                       <% } %>

                        

                    </div>
                    
                  
                 </div>      
                </div>
