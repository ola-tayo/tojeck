        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment-with-locales.min.js" integrity="sha512-42PE0rd+wZ2hNXftlM78BSehIGzezNeQuzihiBCvUEB3CVxHvsShF86wBWwQORNxNINlBPuq7rG4WWhNiTVHFg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script>
            //get form data and send patch requests to the server
            document.getElementById('location').addEventListener('change',async function (event) {
                plsWait(true);
               const request =  await fetch(`/api/v1/CustomerList?van=${event.target.value}`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                   const data = await request.json()
                       if(data.retailCustomers.length > 0){
                        // document.getElementById('display').innerHTML = '';
                        const list = data.retailCustomers.map(element=>{
                            return 
                            `<span  class=" list-group position-relative mb-2" title=""  id="reverseID"  data-reverse="">
                            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" id="rev" >
                                <small class="position-absolute top-0  start-50 translate-middle badge rounded-pill bg-warning"title='grand total of this bill'>
                               ${element.blocked ? 'Activated' : 'Deactivated'}
                                </small>
                                <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href=''>
                                ${element.name}
                                </a>
                            </div> 
                            </span>
                            `;
                        })
                        document.getElementById('display').innerHTML = list
                        plsWait(false);
                       }else{
                        serverError('No customer to show')
                        plsWait(false);
                       }
                    })
                  
            
        </script>
