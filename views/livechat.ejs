<!doctype html>
<html lang="en">

<head>
  <title>BADE || Support <%= SingleLead.TicketId%></title>
  <!-- Required meta tags -->
  <link rel="icon" type="image/x-icon" href="https://allchannels.com.ng/BADES.jpg">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>
  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/chat.css">
  <link rel="stylesheet" href="/sale.css" />
</head>

<body class="position-relative">
  <header>
    <!-- place navbar here -->
    <nav class="dash navbar navbar-expand navbar-light bg-light fixed-top shadow-sm">
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <!-- <a class="nav-link " href="/" aria-current="page">
            <img title="Back" style="width: 40px !important;height: 40px !important;" src="data:image/png;base64,">
          </a> -->
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="#"><b><%= SingleLead.TicketId%> / [<%= SingleLead.status.toUpperCase()  %> TICKET]</b></a>
        </li>
      </ul>
    </nav>
  </header>
  <main class="pt-3">
    <div class="container  p-2 mt-3 mb-3 position-relative ">

     
      <!-- chat display  -->

      <div class="container-fluid   d-flex flex-column overflow-y-auto overflow-x-hidden rounded p-3  " style="height: 50vhh;" id="display">
        <% if (SingleLead.conversation.length > 0 ) { %>
        <% SingleLead.conversation.forEach(element => { %>

        <!-- display for other sender -->

        <div class="chatContainer shadow-sm time-left
                            <% if (element.senderId.toString() === '' ) { %>
                                bg-warning-subtle right
                            <% }%>
                            ">
          <!-- <img src="/person.png" alt="Avatar" <% if (element.senderId.toString() !== SingleLead._id.toString() ) { %> class="right" <% }%> style="width:60%;" /> -->
          <p class="word-wrap"><%= element.messageBody %></p>
          <span class="time-left ">
            <% if (element.senderId.toString() === '') { %>
            <%=  element.author %> <%= element.Timestamp %>
            <% }else{%>
            Support <%= element.Timestamp %>
            <%}%>
         </span>
        </div>

         <% }) %>
            <% }%>
        </div>
        <!-- chat input -->
      </div>
      <% if (SingleLead.status !== 'Closed') { %>
      <form id="chatForm" class="fixed-bottom bg-body-tertiary pt-2 border-top ps-3 shadow-sm">
        <div class="input-group" id="chatId" data-chatId="<%= SingleLead._id %>">
          <input type="text" class="form-control" placeholder="Type a Message" name="message" <% if (SingleLead.status !== 'Open') { %>
           disabled
          <% } %> id="sender" required autocomplete="off" data-senderId="">
          <input type="hidden" name="author" value="<%=SingleLead.name%>">
          <button class="btn btn-warning " title="Send message"><i class="bi bi-send-fill"></i></button>
          <a href="tel:<%=Business.Tel%>" title="Call <%=Business.CompayName%>" class="btn btn-outline-dark "><i class="bi bi-telephone-forward"></i> </button>
            <a href="mailto: <%= Business.email %>" title="Email <%= Business.CompayName %>" class="btn btn-link btn-outline-info "><i class="bi bi-envelope-at-fill"></i></button>
              <!-- <a class="btn btn-dark" title="Share Invite"> <i class="bi bi-share-fill"></i></a> -->
        </div>
      </form>
    <% } %>
  </main>
  <footer>
    <!-- place footer here -->
  </footer>
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment-with-locales.min.js" integrity="sha512-42PE0rd+wZ2hNXftlM78BSehIGzezNeQuzihiBCvUEB3CVxHvsShF86wBWwQORNxNINlBPuq7rG4WWhNiTVHFg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="/js/chatForm.js"></script>
</body>

</html>