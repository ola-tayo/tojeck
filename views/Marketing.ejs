<script>
// check fields entered

const FieldChecker = ()=>{
    const fields = document.querySelectorAll('input[required]');
    fields.forEach(field => {
        field.addEventListener('blur', (e)=>{

            if(e.target.value !== ''){
                field.classList.remove('is-invalid');
                field.classList.add('is-valid');
            }else{
                field.classList.add('is-invalid');
            }
        });
    });
}

FieldChecker()


const ActionableFields = ()=>{
    const fields = document.getElementsByName('flexRadioDisabled');
    fields.forEach(field => {
        field.addEventListener('change', (e)=>{
          if (field.dataset.value === 'now'){
            // target the date input and make it visible
            document.getElementById(`dateToSend`).setAttribute('disabled',true);
            document.getElementById(`dateToSend`).value = ''
            // field.classList.remove('is-invalid');
          }else if(field.dataset.value === 'Scheduled'){
            document.getElementById(`dateToSend`).removeAttribute('disabled');
          }
        });
    });
    const newsletterOption =  document.getElementsByName('exampleRadios');
    const hiddenimgandprogress = document.querySelectorAll('#progress');
    newsletterOption.forEach((option)=>{
        option.addEventListener('change', (e)=>{
            if (e.target.value === 'News') {
                hiddenimgandprogress.forEach(element =>{
                    element.classList.remove('d-none')
                })
    
            }else{
                hiddenimgandprogress.forEach(element =>{
                    element.classList.add('d-none')
                })
            }
        })
    })
    
   
}


ActionableFields()

const serverResponse = (response)=>{
    const Toast = Swal.mixin({
    toast: true,
    position: "top-end",
    showConfirmButton: false,
    timer: 3000,
    timerProgressBar: true,
    didOpen: (toast) => {
        toast.onmouseenter = Swal.stopTimer;
        toast.onmouseleave = Swal.resumeTimer;
    }
    });
    Toast.fire({
    icon: `success`,
    title: `${response}`
    });
}


// post email maarketing 
const marketingForm = document.getElementById('Marketing')

marketingForm.addEventListener('submit', async (e)=>{
    e.preventDefault()
    plsWait(true)
    let Reciepiants = []
    const serverResponse = await fetch("/api/v1/getFulldb", {
        method: "GET",
        headers: {
          "Content-Type": "application/json",
        },
      });
  
        const EmailRecivers = await serverResponse.json();

        
        EmailRecivers.customers.filter((customer)=>{
            return customer.NewsFeedSubscription && customer.blocked === false;
        }).forEach(lead =>{
            Reciepiants.push({email: lead.Email}) 
        })
        
       
        
        // get form values
        const body = {
         Template : marketingForm.exampleRadios.value,
         RecieptiantsEmails : Reciepiants,
         message : marketingForm.flexRadioDisabled.value,
         header : marketingForm.Header.value,
         DateSent :"",
         SheduledDate : marketingForm.Scheduled.value,
         image : marketingForm.Image.value,
         title : marketingForm.Title.value,
         Body : marketingForm.Body.value,
        }

        const request = await fetch("/api/v1/Productivity/sendMarketing", {
            method:'POST',
            body:JSON.stringify(body),
            headers:{
                'Content-Type':'application/json'
            }
        })
        const Response = await request.json()
       if(Response.message){
       
        const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 9000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.onmouseenter = Swal.stopTimer;
                toast.onmouseleave = Swal.resumeTimer;
            }
            });
            Toast.fire({
            icon: `success`,
            title: `${Response.message}`
            });

            marketingForm.reset()
            plsWait(false);
       }else{
        const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 9000,
            timerProgressBar: true,
            didOpen: (toast) => {
              toast.onmouseenter = Swal.stopTimer;
              toast.onmouseleave = Swal.resumeTimer;
            }

            });
            Toast.fire({
            icon: `error`,
            title: `${Response.error}`
        });

        plsWait(false);
       }
        
       
})



</script>


