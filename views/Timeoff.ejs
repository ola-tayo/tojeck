<script>

  var allowedDays

  const Type = document.getElementById('Type')

  Type.onchange = function(event){
    allowedDays = event.target.options[event.target.selectedIndex].dataset.daysleft;
  };

//  get leaveform
const leaveform = document.getElementById('leaveform')
leaveform.addEventListener('submit',async (e) => {
  e.preventDefault();

  plsWait(true);

 try {

  // Convert to days
  const date1 = new Date(leaveform.End.value);
    const date2 = new Date(leaveform.Start.value);
    const diffTime = Math.abs(date2 - date1);
     const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));
 

    if(diffDays > allowedDays){
      serverError(`You can only take' ${allowedDays} days`)
      Start.value ='';
      End.value = ''
      plsWait(false)
    }else{
      
  const leaveRequest ={
    name: leaveform.Tittle.value,
    Type: leaveform.Type.value,
    StartDate: leaveform.Start.value,
    EndDate: leaveform.End.value,
    category: leaveform.Category.value,
    Description: leaveform.Description.value,
    EmployeeId:ActiveUser,
    Attachement:'',
    EmployeeName:ActiveUserName,
    ActivityLog:[{
      logMsg:`${ActiveUserName} requested for ${leaveform.Type.value} on ${leaveform.Start.value}`,
      status:'Pending'
    }]
  }

  const url = `/api/v1/leaveRequests/?user=${ActiveUser}`

  const request = await fetch(url,{
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(leaveRequest)
  })

  const response = await request.json()
  response.message ? ShowServerResponse(response.message) : serverError(response.error)
  response.error ? plsWait(false): location.reload()

  }

 } catch (error) {
  serverError(error.message)
 }


}) 


// approval for leave requests
