
<!doctype html>
<html lang="en">
    <head>
        <title>BADE||PURCHASE</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <link rel="icon" type="image/x-icon" href="https://allchannels.com.ng/BADES.jpg">
        <link rel="stylesheet" href="/sale.css" />
        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        
    </head>
  
    <body>
        <header>
            <%-include('./partials/Notification.ejs')%> 
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
            <!-- place navbar here -->
            <nav class="dash navbar navbar-light bg-light fixed-top" 
            style="background-color: rgb(173, 168, 105) !important">
                <div class="container-fluid">
                    <span  class="navbar-brand" >
                        <img 
                        onclick="history.back()"
                        width="30"
                        hegith="30"
                        src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAADwAAAA8CAYAAAA6/NlyAAA
                        ">
                       <b> Purchase</b>
                    </span>
                    <button
                        class="navbar-toggler"
                        type="button"
                        data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasNavbar"
                        aria-controls="offcanvasNavbar"
                    >
                    <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div
                        class="offcanvas offcanvas-end"
                        tabindex="-1"
                        id="offcanvasNavbar"
                        aria-labelledby="offcanvasNavbarLabel"
                    >
                        <div class="dash offcanvas-header bg-dark-subtle ">
                            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                                Menu
                            </h5>
                            <button
                                type="button"
                                class="btn-close text-reset"
                                data-bs-dismiss="offcanvas"
                                aria-label="Close"
                            ></button>
                        </div>
                        <div class="offcanvas-body ">
                            <!-- uls -->
                            <ul class="nav nav-tabs d-flex  align-content-center  " id="myTab" role="tablist" >
                              <%-include('./partials/USER.ejs')%>
                            <%if( user.raiseLpo || user.isAdmin ){%>
                                <li class="nav-item " role="presentation">
                                    <button
                                        class="nav-link "
                                        id="profile-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#profile"
                                        type="button"
                                        role="tab"
                                        aria-controls="profile"
                                        aria-selected="false"
                                        title="List of Locations"
                                    >
                                      Generate New P.O
                                    </button>
                                </li>
                                <%}%>
                                <li class="nav-item active" role="presentation">
                                    <button
                                        class="nav-link active"
                                        id="messages-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#messages"
                                        type="button"
                                        role="tab"
                                        aria-controls="messages"
                                        aria-selected="false"
                                        title="Add New Location"
                                    >
                                    Generated Lpo
                                    </button>
                                </li>
                               </ul> 
                               <form class="d-flex border">
                                <input type="text" id="searchLPOproducts" class="form-control " list="searchLPO" name="referenceNo" placeholder="Search P/O ReferenceNo" />
                                <datalist id="searchLPO" >
                                <!-- display options for Bills -->
                                <%searchAllPurchase.forEach((order)=>{%>
                                      <option value="<%=order._id%>"><%=order.billReferenceNo%></option>
                                    <%})%>
                                </datalist>
                                <button class="btn btn-success" type="submit">
                                    Search
                                </button>
                            </form>
                            <script>
                               const searchLPOproducts = document.getElementById("searchLPOproducts")
                               searchLPOproducts.addEventListener('change',async(event)=>{
                                plsWait(true) 
                            setTimeout(()=>{
                              plsWait(false)
                            },3000)
                            location.assign(`/api/v1/Purchase/bill/${event.target.value}/`)
                            })      
                            </script>
                        </div>
                    </div>
                </div>
            </nav>
            
           <!-- Nav tabs -->
          
        </header>

        <main class="pt-4 ">
            <!-- Tab panes -->
            <div class="tab-content mt-5 ">
           
                <div
                    class="tab-pane "
                    id="profile"
                    role="tabpanel"
                    aria-labelledby="profile-tab"
                >
                   <div class="container-fluid ">
                    <%if( user.raiseLpo || user.isAdmin ){%>
                    
                      <form id="purchaseForm" class="shadow-lg container mt-4 mb-4 p-3 bg-light" style="height: 100dvh;" >
                        <div class="d-flex justify-content-between align-content-center gap-2">
                          <img  height="80" width="80" src="/logo.jpg" class="rounded "/>
                          <b><%= Business.CompayName %></b>
                        </div>
                        <br>

                        <div class="col-md-4">
                          <label for="Vendor" class="form-label">Choose a Vendor</label>
                          <select
                          required
                            class="form-select "
                            id="Vendor"
                            aria-describedby="validationServer04Feedback"
                            required
                            name="Vendor"
                          >
                          <option>Choose...</option>
                          <%if(vendor){%>
                            <%vendor.forEach((vendor)=>{%>
                                <option value="<%=vendor._id%>"
                                <%if(vendor.block_vendor){%>
                                  disabled="true"
                                <%}%>
                                ><%=vendor.Name%></option>
                            <%})%>
                            <%}%>
                          </select>

                      </div>

                       <!-- P/O Ref NO -->
                       <div class="col-md-4">
                        <label for="WHs" >Ware House</label>
                        <select id="WHs" name="WHs" required class="form-select" >
                            <option value="">Choose...</option>
                              <%if(WH.length > 0){%>
                                <%WH.forEach(WH=>{%>
                                  <option value="<%=WH._id%>"><%=WH.WHName%></option>
                                <%})%>
                              <%}%>
                         
                        </select>
                      </div>
                      <!-- ends here -->
        
                       <!-- recived date -->
                       <div class="col-md-4 ">
                        <label for="Ref" class="form-label">Ref No</label>
                        <input
                          type="text"
                          class="form-control border"
                          id="Ref"
                          aria-describedby="validationServer05Feedback"
                          required
                          name="Ref"
                          placeholder="Enter a reference to this Purchase from"
                        />
                      </div>
                      <!-- ends here -->
                     
                      <!-- recived date -->
                      <div class="col-md-4 ">
                        <label for="RecievedDate" class="form-label">Recived Date</label>
                        <input
                          type="date"
                          class="form-control border"
                          id="RecievedDate"
                          aria-describedby="validationServer05Feedback"
                          required
                          name="RecievedDate"
                        />
                      </div>
                      <!-- ends here -->
        
                      <div class="col-md-4 ">
                        <p >Upload Attachement</p>
                        <label for="files" class="form-label" title="Upload Attachement">
                          <img width="40" height="40" src="https://img.icons8.com/color/48/add-image.png" alt="add-image"/>
                        </label>
                        <input
                          type="file"
                          class="form-control border"
                          id="files"
                          name="files"
                          
                          hidden
                        />
                      </div>

                      <input type="text" hidden readonly name="imageLoader" id="imageLoader">
                      <div id="productImage" class="d-none"></div>
                      <!-- ends here -->

                      <hr>

                      <div class="col-md-4">
                        <label class="form-label" for=""></label>
                        <button class="btn btn-warning">Create Purchase Order</button>
                      </div>


                      </form>
                    <%}%>
                   </div>
                </div>
                <div
                    class="tab-pane active"
                    id="messages"
                    role="tabpanel"
                    aria-labelledby="messages-tab"
                >
                   <div class="container-fluid mt-5 mb-5 ">
                       
                    <%if(result.purchaseOrder.length > 0){%>
                      <%result.purchaseOrder.forEach(purchase=>{%>
                          <span  class="list-group position-relative mb-2" title="P/O <%=purchase.billReferenceNo%>">
                              <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" >
                                  <small class="position-absolute top-0  start-50 translate-middle badge rounded-pill bg-warning"title='P/O has been registered in virtual ware house'>
                                    <span class="badge bg-secondary">
                                       <%=purchase.status.toUpperCase()%>
                                    </span>
                                  </small>
                                  <% vend = vendor.filter(vendor=>{%>
                                    <%return vendor._id.toString() === purchase.Vendor.toString()  %>
                                    <%})%>
                                    <%vend.map(name=>{%>
                                     <h6>
                                      <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/api/v1/Purchase/bill/<%=purchase._id%>">GRN/<%=purchase.billReferenceNo%>/<%=name.Name.substring(0,3).toUpperCase()%>/<%=purchase.grandTotal%></a>
                                     </h6>
                                    <%})%>
                                </div> 
                              </span>
                      <%})%>
                      <%}%>
                   </div>
                    
                </div>
               </div>
        </main>
        <footer style="z-index: 3 !important;">
          <!-- place footer here -->
          <div class="container-fluid fixed-bottom bg-dark-subtle ">
              <div class="row p-2">
                  <!-- for next and filter -->
                  <div class="contaner d-flex justify-content-between">
                    <div>
                             <!-- next and prev btn -->
                             <button type="button" class="btn btn-dark shadow-sm me-2"
                             <%if(!result.Previous){%>
                               disabled
                               <%}%>
                               <%if(result.Previous){%>
                                 onclick="location.assign('/api/v1/Virtual/Purchase/Order/<%=user._id%>/?page=<%=result.Previous.page%>&limit=9')"
                                 <%}%>
                             >
                             Prev
                           </button>
                             
                             <button type="button" class="btn btn-dark shadow-sm me-2" <%if(!result.next){%>
                               disabled =true
                               <%}%>
                               <%if(result.next){%>
                                 onclick="location.assign('/api/v1/Virtual/Purchase/Order/<%=user._id%>/?page=<%=result.next.page%>&limit=9')"
                                 <%}%>
                               >
                               Next
                              </button>
                     <!--  -->
                    </div>
 
                    <div>
                     
                    </div>
                          <div class="row">
                            <div class="col-12">
                                <p class="text-center">
                                    BADE &copy; <script>
                                        document.write(new Date().getFullYear());
                                    </script>. All rights reserved.
                                </p>
                            </div>
                        </div>
                     </div>
              </div>
          </div>
          <!-- end of footer -->
          <input type="hidden" id="Signature" value="<%=user.Signature%>">
      </footer>
        <!-- Bootstrap JavaScript Libraries -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
         <!-- The core Firebase JS SDK is always required and must be listed first -->
    <script src="https://www.gstatic.com/firebasejs/7.13.1/firebase-app.js"></script>
    <!-- TODO: Add SDKs for Firebase products that you want to use -->
    <script src="https://www.gstatic.com/firebasejs/7.13.1/firebase-storage.js"></script>
    <script type="module" src="/ImageUpload.js"></script>
    <script>

      const customerInput = document.getElementById('purchaseForm')
     
      customerInput.addEventListener('submit',async(e)=>{
        e.preventDefault()
        plsWait(true)

            const endPoint = `/api/v1/vendor/${customerInput.Vendor.value}`
            const res = await fetch(endPoint,{
                method:'POST',
                body:JSON.stringify({
                  WHs:customerInput.WHs.value,
                  RecievedDate:customerInput.RecievedDate.value,
                  Vendor:customerInput.Vendor.value,
                  files:customerInput.imageLoader.value,
                  Ref:customerInput.Ref.value, 
                }),
                headers:{'Content-Type': 'application/json'}
            })

            const data = await res.json()

            if(data.message){
              ShowServerResponse(data.message)
              location.assign(`/api/v1/Purchase/bill/${data._id}`)
            }else{
              plsWait(false)
              serverError(data.error)
            }
            
           
      })
    </script>
    </body>
</html>
