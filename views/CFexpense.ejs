                            <hr>
                            <%if(user.isAdmin || user.isCFO || user.expenseManager ){%>
                            <!-- create expense category -->
                            <form class="list-group mb-5" id="category">
                              <div class="list-group-item list-group-item-action justify-content-between d-flex"
                            >
                              <input class="form-input" placeholder="Enter new category" name="categoty" type="text">
                              
                                <button class=" btn btn-dark " >Create Category</button>
                              </div>
                            </form>
                            <%}%>
                             <!-- ends here -->
                        <!-- expense category -->
                        <div class="list-group mb-5" >
                          <p>Expense Category</p>
